<Window x:Class="OENIK_PROG4_2020_1_BCXFMD_FI2W6F.AddNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OENIK_PROG4_2020_1_BCXFMD_FI2W6F"
        mc:Ignorable="d"
        Title="AddNameWindow" Height="400" Width="240">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/button_background.png"/>
        </Grid.Background>
        <TextBox x:Name="nameText" VerticalAlignment="Top" Margin="20,153,22,0" Height="44" Background="Cyan" TextWrapping="Wrap" FontSize="25"></TextBox>
        <Button Content="OK"  Margin="50,310,50,0" VerticalAlignment="Top" Width="120" Height="35"
                FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" Foreground="Cyan" Click="EnterName_Click">
            <Button.Background>
                <ImageBrush ImageSource="/images/button_background.png"/>
            </Button.Background>
        </Button>
        <Label x:Name="label" Content="ENTER YOUR NAME" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="212"
           Foreground="Cyan" FontSize="18" HorizontalContentAlignment="Center" FontWeight="Bold"/>
    </Grid>
</Window>
